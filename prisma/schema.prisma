generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "typedSql"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pg_bigm]
}

model Article {
  id    Int    @id @default(autoincrement())
  title String
  body  String

  @@index([body(ops: raw("gin_bigm_ops"))], name: "body_fulltext_idx", type: Gin)
}
